<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    tools:context=".MyCovidData">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:src="@drawable/ic_info_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="110dp"
        android:text="MY COVID DATA"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/classes_btn"
        android:layout_width="347dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="#FAF1E4"
        android:drawableLeft="@drawable/ic_my_covid_status"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:paddingLeft="24dp"
        android:paddingRight="16dp"
        android:text="My Covid Status"
        android:textAllCaps="false"
        android:textColor="#FF9800"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mySocialCircle_Btn" />

    <Button
        android:id="@+id/mySocialCircle_Btn"
        android:layout_width="347dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="#FAF1E4"
        android:drawableLeft="@drawable/ic_my_social_circle"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:paddingLeft="24dp"
        android:paddingRight="16dp"
        android:text="My Social Circle"
        android:textAllCaps="false"
        android:textColor="#FF9800"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/residenceHalldata_Btn"
        android:layout_width="347dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="#FAF1E4"
        android:drawableLeft="@drawable/ic_residence_hall"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:paddingLeft="24dp"
        android:paddingRight="16dp"
        android:text="Report Posititve Test"
        android:textAllCaps="false"
        android:textColor="#FF9800"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classes_btn" />

    <Button
        android:id="@+id/myWorkplace_btn"
        android:layout_width="347dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="#FAF1E4"
        android:drawableLeft="@drawable/ic_residence_hall"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:paddingLeft="24dp"
        android:paddingRight="16dp"
        android:text="My Workplace"
        android:textAllCaps="false"
        android:textColor="#FF9800"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/residenceHalldata_Btn" />
</androidx.constraintlayout.widget.ConstraintLayout>